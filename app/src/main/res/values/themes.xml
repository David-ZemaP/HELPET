<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme usando Material3 -->
    <style name="Theme.Helpet" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Opcional: color de fondo -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#1E122B</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logohelpetsinfondo</item>
        <item name="postSplashScreenTheme">@style/Theme.Helpet</item>
    </style>
</resources>
